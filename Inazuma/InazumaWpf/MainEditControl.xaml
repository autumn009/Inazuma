<UserControl x:Class="InazumaWpf.MainEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InazumaWpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ContentControl x:Name="ContentCintrol"  MouseDoubleClick="ContentControl_MouseDoubleClick">
        <Grid x:Name="DrawArea" SizeChanged="DrawArea_SizeChanged" Loaded="DrawArea_Loaded" Unloaded="DrawArea_Unloaded"
              TextInput="DrawArea_TextInput" KeyDown="DrawArea_KeyDown" Focusable="True">
            <Rectangle x:Name="CursorRect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="10" Height="10" Fill="Black" Opacity=".5" ></Rectangle>
        </Grid>
    </ContentControl>
</UserControl>
